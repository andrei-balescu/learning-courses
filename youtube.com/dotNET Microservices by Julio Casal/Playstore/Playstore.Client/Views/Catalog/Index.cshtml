@using Playstore.Client.Models.Catalog;
@model IEnumerable<CatalogItemViewModel>;
@{
    ViewData["Title"] = "Catalog";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-asp-controller="Catalog" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create new item
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width: 100%;">
        <thead>
            <tr>
                <th width="20%">Name</th>
                <th width="50%">Description</th>
                <th width="10%">Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (CatalogItemViewModel item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Catalog" asp-action="Edit" asp-route-id=@item.Id class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                            <a asp-controller="Catalog" asp-action="Delete" asp-route-id=@item.Id class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
