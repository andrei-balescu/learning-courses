    "version": "0.2.0",
    "configurations": [

        {
            "name": "C#: Playstore.Catalog.Service Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/Playstore.Catalog.Service/Playstore.Catalog.Service.csproj"
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Playstore.Catalog.Service/bin/Debug/net6.0/Playstore.Catalog.Service.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Playstore.Catalog.Service",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                // start swagger by default
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}