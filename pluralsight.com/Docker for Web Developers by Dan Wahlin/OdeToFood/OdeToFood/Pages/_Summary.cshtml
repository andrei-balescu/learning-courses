@using OdeToFood.Core
@model Restaurant

<div class="card bg-light mb-3">
    <div class="card-header">
        <h2 class="card-title">@Model.Name</h2>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-lg btn-light" asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            <i>Details</i>
        </a>
        <a class="btn btn-lg btn-light" asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <i>Edit</i>
        </a>
        <a class="btn btn-lg btn-light" asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <i>Delete</i>
        </a>
    </div>
</div>