@page

@using OdeToFood.Core

@model OdeToFood.Pages.Restaurants.IndexModel
@{
    ViewData["Title"] = "Restaurants";
}

<h1>@ViewData["Title"]</h1>

@if(Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<form method="get">
    <div>
        <div class="form-group">
            <div class="input-group">
                <input type="search" class="form-control" asp-for="SearchTerm"/>
                <span class="input-group-append">
                    <button class="btn btn-secondary">
                        <i>Search</i>
                    </button>
                </span>
            </div>
        </div>
    </div>
</form> 

<div class="card-columns card-columns-single">
@foreach (Restaurant restaurant in Model.Restaurants)
{
    <partial name="_Summary" model="restaurant" />
}
</div>

<a asp-page="./Edit" class="btn btn-primary">Add New</a>